<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta name="author" content="Jobboard">

    <title>Tech Savvy | @ViewBag.Title</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/">
    <!-- Bootstrap CSS -->
    @Styles.Render("~/Content/bootstrap")
    <!-- Material CSS -->
    @Styles.Render("~/Content/material")
    <!-- DataTables -->
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css" rel="stylesheet" />
    <!-- Font Awesome CSS -->
    @Styles.Render("~/Content/fontawesome")
    <!-- Extras -->
    @Styles.Render("~/Content/extras")
    <!-- Theme Styles -->
    @Styles.Render("~/Content/theme")
    <!-- Custom CSS Styles -->
    @Styles.Render("~/Content/css")

</head>

<body>
    <!-- Header Section Start -->
    <div class="header">
        <!-- Start intro section -->
        <section id="intro" class="section-intro">
            <div class="logo-menu">
                <nav class="navbar navbar-default main-navigation" role="navigation" data-spy="affix" data-offset-top="50">
                    <div class="container">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand logo" href=@Url.Action("Index", "Home")><img src="~/Content/img/logo.png" alt=""></a>
                        </div>

                        <div class="collapse navbar-collapse" id="navbar">
                            <!-- Start Navigation List -->
                            <ul class="nav navbar-nav">
                                <li>
                                    <a class="active" href=@Url.Action("Index", "Home")>
                                        Home
                                    </a>
                                </li>
                                @if (Request.IsAuthenticated && User.IsInRole("Employee"))
                                {
                                    <li>
                                        <a href="#">
                                            Employees <i class="fa fa-angle-down"></i>
                                        </a>
                                        <ul class="dropdown">
                                            <li>
                                                <a href=@Url.Action("FindJob", "OpenPositions")>
                                                    Browse Jobs
                                                </a>
                                            </li>
                                            <li>
                                                <a href=@Url.Action("UploadResume", "Manage")>
                                                    Add Resume
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#">
                                                    View My Applications
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                }
                                @if (Request.IsAuthenticated && User.IsInRole("Manager"))
                                {
                                    <li>
                                        <a href="#">
                                            Managers <i class="fa fa-angle-down"></i>
                                        </a>
                                        <ul class="dropdown">
                                            <li>
                                                <a href=@Url.Action("Index", "OpenPositions")>
                                                    Manage Open Positions
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#">
                                                    Manage Applications
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                }
                                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                    <li>
                                        <a href="#">
                                            Administrator <i class="fa fa-angle-down"></i>
                                        </a>
                                        <ul class="dropdown">
                                            <li>
                                                <a href=@Url.Action("Index", "Locations")>
                                                    Manage Locations
                                                </a>
                                            </li>
                                            <li>
                                                <a href=@Url.Action("Index", "Positions")>
                                                    Manage Positions
                                                </a>
                                            </li>
                                            <li>
                                                <a href=@Url.Action("Index", "OpenPositions")>
                                                    Manage Open Positions
                                                </a>
                                            </li>
                                            <li>
                                                <a href=@Url.Action("Index", "Applications")>
                                                    View Applications
                                                </a>
                                            </li>
                                            <li>
                                                <a href=@Url.Action("Index", "ApplicationStatus")>
                                                    Manage Application Statuses
                                                </a>
                                            </li>
                                            <li>
                                                <a href=@Url.Action("Index", "UsersAdmin")>
                                                    Manage Users
                                                </a>
                                            </li>
                                            <li>
                                                <a href=@Url.Action("Index", "RolesAdmin")>
                                                    Manage Roles
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                }
                                <li><a href=@Url.Action("Contact", "Home")>Contact</a></li>
                            </ul>
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                    <!-- Mobile Menu Start -->
                    <ul class="wpb-mobile-menu">
                        <li>
                            <a class="active" href=@Url.Action("Index", "Home")>Home</a>

                        </li>
                        <li>
                            <a href="about.html">Pages</a>
                            <ul>
                                <li><a href="about.html">About</a></li>
                                <li><a href="job-page.html">Job Page</a></li>
                                <li><a href="job-details.html">Job Details</a></li>
                                <li><a href="resume.html">Resume Page</a></li>
                                <li><a href="privacy-policy.html">Privacy Policy</a></li>
                                <li><a href="faq.html">FAQ</a></li>
                                <li><a href="pricing.html">Pricing Tables</a></li>
                                <li><a href="contact.html">Contact</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="#">For Candidates</a>
                            <ul>
                                <li><a href="browse-jobs.html">Browse Jobs</a></li>
                                <li><a href="browse-categories.html">Browse Categories</a></li>
                                <li><a href="add-resume.html">Add Resume</a></li>
                                <li><a href="manage-resumes.html">Manage Resumes</a></li>
                                <li><a href="job-alerts.html">Job Alerts</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="#">For Employers</a>
                            <ul>
                                <li><a href="post-job.html">Add Job</a></li>
                                <li><a href="manage-jobs.html">Manage Jobs</a></li>
                                <li><a href="manage-applications.html">Manage Applications</a></li>
                                <li><a href="browse-resumes.html">Browse Resumes</a></li>
                            </ul>
                        </li>
                        <li><a href=@Url.Action("Contact", "Home")>Contact</a></li>
                        <li class="btn-m"><a href="my-account.html"><i class="ti-lock"></i>  Log In</a></li>

                    </ul>
                    <!-- Mobile Menu End -->
                </nav>


            </div>
            <!-- Header Section End -->

        </section>
    </div>

    @RenderBody()

    <!-- Footer Section Start -->
    <footer>
        <!-- Footer Area Start -->
        <section class="footer-Content">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="widget">
                            <h3 class="block-title"><img src="~/Content/img/logo.png" class="img-responsive" alt="Footer Logo"></h3>
                            <div class="textwidget">
                                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque lobortis tincidunt est, et euismod purus suscipit quis. Etiam euismod ornare elementum. Sed ex est, consectetur eget facilisis sed.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="widget">
                            <h3 class="block-title">Quick Links</h3>
                            <ul class="menu">
                                <li><a href="#">About Us</a></li>
                                <li><a href="#">Support</a></li>
                                <li><a href="#">License</a></li>
                                <li><a href="#">Terms & Conditions</a></li>
                                <li><a href="#">Contact</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12 col-xs-12">
                        <div class="widget">
                            <h3 class="block-title">Follow Us</h3>
                            <div class="bottom-social-icons social-icon">
                                <a class="twitter" href="https://twitter.com/jaggermeister" target="_blank"><i class="ti-twitter-alt"></i></a>
                                <a class="facebook" href="#"><i class="ti-facebook"></i></a>
                                <a class="youtube" href="#"><i class="ti-youtube"></i></a>
                                <a class="dribble" href="https://dribbble.com/jaggermeister" target="_blank"><i class="ti-dribbble"></i></a>
                                <a class="linkedin" href="https://www.linkedin.com/michaeljaggers" target="_blank"><i class="ti-linkedin"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Footer area End -->
        <!-- Copyright Start  -->
        <div id="copyright">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="site-info text-center">
                            <p>All Rights reserved &copy; @DateTime.Now.Year - Tech Savvy</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Copyright End -->

    </footer>
    <!-- Footer Section End -->
    <!-- Go To Top Link -->
    <a href="#" class="back-to-top">
        <i class="ti-arrow-up"></i>
    </a>

    <div id="loading">
        <div id="loading-center">
            <div id="loading-center-absolute">
                <div class="object" id="object_one"></div>
                <div class="object" id="object_two"></div>
                <div class="object" id="object_three"></div>
                <div class="object" id="object_four"></div>
                <div class="object" id="object_five"></div>
                <div class="object" id="object_six"></div>
                <div class="object" id="object_seven"></div>
                <div class="object" id="object_eight"></div>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    @Scripts.Render("~/bundles/scripts")
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script type="text/javascript" src="~/Scripts/custom.js"></script>
    @RenderSection("scripts", required: false)


</body>
</html>