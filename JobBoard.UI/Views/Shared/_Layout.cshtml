<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta name="author" content="Jobboard">

    <title>Tech Savvy | @ViewBag.Title</title>

    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/Content/img/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Content/img/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/img/favicon-16x16.png">
    <!-- Bootstrap CSS -->
    @Styles.Render("~/Content/bootstrap")
    <!-- Material CSS -->
    @Styles.Render("~/Content/material")
    <!-- DataTables -->
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css" rel="stylesheet" />
    <!-- Font Awesome CSS -->
    @Styles.Render("~/Content/fontawesome")
    <!-- Extras -->
    @Styles.Render("~/Content/extra_styles")
    <!-- Theme Styles -->
    @Styles.Render("~/Content/theme")
    <!-- Custom CSS Styles -->
    @Styles.Render("~/Content/custom")

</head>

<body>
    <!-- Header Section Start -->
    <div class="header">
        <!-- Start intro section -->
        <section id="intro" class="section-intro">
            <div class="logo-menu">
                <nav class="navbar navbar-default main-navigation" role="navigation" data-spy="affix" data-offset-top="50">
                    <div class="container">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand logo" href=@Url.Action("Index", "Home")><img src="~/Content/img/techsavvy-logo.png" alt=""></a>
                        </div>

                        <div class="collapse navbar-collapse" id="navbar">
                            <!-- Start Navigation List -->
                            <ul class="nav navbar-nav">
                                <li>
                                    <a href=@Url.Action("Index", "Home")>
                                        Home
                                    </a>
                                </li>
                                @if (Request.IsAuthenticated && User.IsInRole("Employee"))
                                {
                                    <li>
                                        <a href="#">
                                            Employees <i class="fa fa-angle-down"></i>
                                        </a>
                                        <ul class="dropdown">
                                            <li>
                                                <a href=@Url.Action("UploadResume", "Manage")>
                                                    Manage Resume
                                                </a>
                                            </li>
                                            <li>
                                                <a href=@Url.Action("MyApplications", "Applications")>
                                                    View My Applications
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                }
                                @if (Request.IsAuthenticated && User.IsInRole("Manager"))
                                {
                                    <li>
                                        <a href="#">
                                            Managers <i class="fa fa-angle-down"></i>
                                        </a>
                                        <ul class="dropdown">
                                            <li>
                                                <a href=@Url.Action("Index", "OpenPositions")>
                                                    Manage Open Positions
                                                </a>
                                            </li>
                                            <li>
                                                <a href=@Url.Action("Index", "Applications")>
                                                    Manage Applications
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                }
                                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                    <li>
                                        <a href="#">
                                            Admin <i class="fa fa-angle-down"></i>
                                        </a>
                                        <ul class="dropdown">
                                            <li>
                                                <a href=@Url.Action("Index", "Locations")>
                                                    Manage Locations
                                                </a>
                                            </li>
                                            <li>
                                                <a href=@Url.Action("Index", "Positions")>
                                                    Manage Positions
                                                </a>
                                            </li>
                                            <li>
                                                <a href=@Url.Action("Index", "OpenPositions")>
                                                    Manage Open Positions
                                                </a>
                                            </li>
                                            <li>
                                                <a href=@Url.Action("Index", "Applications")>
                                                    Manage Applications
                                                </a>
                                            </li>
                                            <li>
                                                <a href=@Url.Action("Index", "ApplicationStatus")>
                                                    Manage Application Statuses
                                                </a>
                                            </li>
                                            <li>
                                                <a href=@Url.Action("Index", "UsersAdmin")>
                                                    Manage Users
                                                </a>
                                            </li>
                                            <li>
                                                <a href=@Url.Action("Index", "RolesAdmin")>
                                                    Manage Roles
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                }
                                <li><a href=@Url.Action("FindJob", "OpenPositions")>Jobs</a></li>
                                <li><a href=@Url.Action("About", "Home")>About</a></li>
                                <li><a href=@Url.Action("Contact", "Home")>Contact</a></li>
                            </ul>
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                    <!-- Mobile Menu Start -->
                    <ul class="wpb-mobile-menu">
                        <li>
                            <a href=@Url.Action("Index", "Home")>Home</a>

                        </li>
                        @if (Request.IsAuthenticated && User.IsInRole("Employee"))
                        {
                            <li>
                                <a href="#">Employees</a>
                                <ul>
                                    <li><a href=@Url.Action("UploadResume", "Manage")>Manage Resume</a></li>
                                    <li><a href=@Url.Action("MyApplications", "Applications")>View My Applications</a></li>
                                </ul>
                            </li>
                        }
                        @if (Request.IsAuthenticated && User.IsInRole("Manager"))
                        {
                            <li>
                                <a href="#">Managers</a>
                                <ul>
                                    <li><a href=@Url.Action("Index", "OpenPositions")>Manage Open Positions</a></li>
                                    <li><a href=@Url.Action("Index", "Applications")>Manage Applications</a></li>
                                </ul>
                            </li>
                        }
                        @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li>
                                <a href="#">Admin</a>
                                <ul>
                                    <li><a href=@Url.Action("Index", "Locations")>Manage Locations</a></li>
                                    <li><a href=@Url.Action("Index", "Positions")>Manage Positions</a></li>
                                    <li><a href=@Url.Action("Index", "OpenPositions")>Manage Open Positions</a></li>
                                    <li><a href=@Url.Action("Index", "Applications")>Manage Applications</a></li>
                                    <li><a href=@Url.Action("Index", "ApplicationStatus")>Manage Application Statuses</a></li>
                                    <li><a href=@Url.Action("Index", "UsersAdmin")>Manage Users</a></li>
                                    <li><a href=@Url.Action("Index", "RolesAdmin")>Manage Roles</a></li>
                                </ul>
                            </li>
                        }
                        <li><a href=@Url.Action("FindJob", "OpenPositions")>Jobs</a></li>
                        <li><a href=@Url.Action("About", "Home")>About</a></li>
                        <li><a href=@Url.Action("Contact", "Home")>Contact</a></li>
                        @Html.Partial("_MobileLoginPartial")

                    </ul>
                    <!-- Mobile Menu End -->
                </nav>


            </div>
            <!-- Header Section End -->

        </section>
    </div>

    @RenderBody()

    <!-- Footer Section Start -->
    <footer>
        <!-- Footer Area Start -->
        <section class="footer-Content">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="widget">
                            <h3 class="block-title"><img src="~/Content/img/techsavvy-logo-white.png" class="img-responsive" alt="Footer Logo"></h3>
                            <div class="textwidget">
                                <p>TechSavvy is an equal-opportunity employer that does not discriminate based upon age, race, gender, or sexual orientation.  Come see what makes us great!</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="widget">
                            <h3 class="block-title">Quick Links</h3>
                            <ul class="menu">
                                <li><a href=@Url.Action("About", "Home")>About Us</a></li>
                                <li><a href="#">Support</a></li>
                                <li><a href="#">License</a></li>
                                <li><a href="#">Terms & Conditions</a></li>
                                <li><a href=@Url.Action("Contact", "Home")>Contact</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12 col-xs-12">
                        <div class="widget">
                            <h3 class="block-title">TechSavvy Social</h3>
                            <div class="bottom-social-icons social-icon">
                                <a class="twitter" href="https://twitter.com/jaggermeister" target="_blank"><i class="ti-twitter-alt"></i></a>
                                <a class="facebook" href="#"><i class="ti-facebook"></i></a>
                                <a class="youtube" href="#"><i class="ti-youtube"></i></a>
                                <a class="dribble" href="https://dribbble.com/jaggermeister" target="_blank"><i class="ti-dribbble"></i></a>
                                <a class="linkedin" href="https://www.linkedin.com/michaeljaggers" target="_blank"><i class="ti-linkedin"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Footer area End -->
        <!-- Copyright Start  -->
        <div id="copyright">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="site-info text-center">
                            <p>&copy; @DateTime.Now.Year TechSavvy - All rights reserved.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Copyright End -->

    </footer>
    <!-- Footer Section End -->
    <!-- Go To Top Link -->
    <a href="#" class="back-to-top">
        <i class="ti-arrow-up"></i>
    </a>

    <div id="loading">
        <div id="loading-center">
            <div id="loading-center-absolute">
                <div class="object" id="object_one"></div>
                <div class="object" id="object_two"></div>
                <div class="object" id="object_three"></div>
                <div class="object" id="object_four"></div>
                <div class="object" id="object_five"></div>
                <div class="object" id="object_six"></div>
                <div class="object" id="object_seven"></div>
                <div class="object" id="object_eight"></div>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    @*<script src="https://code.jquery.com/jquery-2.1.4.js" integrity="sha256-siFczlgw4jULnUICcdm9gjQPZkw/YPDqhQ9+nAOScE4=" crossorigin="anonymous"></script>*@
    @Scripts.Render("~/bundles/main_scripts")

    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.3/jquery.min.js" integrity="sha256-aaODHAgvwQW1bFOGXMeX+pC4PZIPsvn2h1sArYOhgXQ=" crossorigin="anonymous"></script>*@
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script type="text/javascript" src="~/Scripts/custom.js"></script>
    @RenderSection("scripts", required: false)

    <script>
        // Active Nav Link
        $(function () {
            $('.navbar-nav > li a').each(function () {
                if ($(this).attr('href') == window.location.pathname) {
                    $(this).addClass('active');
                }
            });

            $('.slicknav_nav > li a').each(function () {
                if ($(this).attr('href') == window.location.pathname) {
                    $(this).addClass('active');
                }
            });
        });
    </script>


</body>
</html>