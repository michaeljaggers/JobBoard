@model JobBoard.DATA.OpenPositions

@{
    ViewBag.Title = "Delete Open Position";
}

<section class="manage section">
    <div class="container">
        <h2 class="medium-title">@ViewBag.Title</h2>
        <h3>Are you sure you want to delete this open position?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Location.StoreNumber)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Location.StoreNumber)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Position.Title)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Position.Title)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.IsFeatured)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.IsFeatured)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-common" /> 
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-info" })
                </div>
            }
        </div>
    </div>
</section>