@model JobBoard.UI.Models.ContactViewModel

<div class="col-lg-12 py-5">
    @using (Html.BeginForm("", "", FormMethod.Post, new { id = "ContactCreateForm", @class = "contact-form col-lg-8 col-lg-offset-2 mx-auto container" }))
    {
        @Html.AntiForgeryToken()
        
        <h4 class="text-center">Send a Message</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row form-row">
            <div class="form-group col-md-6" style="padding-left: 0;">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "sr-only" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", id = "name", placeholder = Html.DisplayNameFor(m => m.Name), minlength = "2" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-6" style="padding-right: 0;">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "sr-only" })
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", id = "email", placeholder = Html.DisplayNameFor(m => m.Email) } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row form-row">
            <div class="form-group col-12">
                @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "sr-only" })
                @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control", id = "message", placeholder = Html.DisplayNameFor(m => m.Message), rows = "10" } })
                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row form-row">
            <div class="form-group col-12">
                <input type="submit" value="Send Message" class="btn btn-block btn-common py-2" />
            </div>
        </div>
    }
</div>
