@model JobBoard.DATA.Locations

@{
    ViewBag.Title = "Location Details";
}

<section class="manage section">
    <div class="container">
        <h2 class="medium-title">@ViewBag.Title</h2>
        <div>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.StoreNumber)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.StoreNumber)
                </dd>

                <dt>
                    Location Manager
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UserDetail.FullName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.City)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.City)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.State)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.State)
                </dd>

            </dl>
        </div>
        <p>
            @Html.ActionLink("Edit", "Edit", null, new { id = Model.LocationId, @class = "btn btn-common" }) 
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-info" })
        </p>
    </div>
</section>