@model IEnumerable<JobBoard.DATA.Locations>

@{
    ViewBag.Title = "Manage Locations";
}

<section class="find-job section">
    <div class="container">
        <h2 class="section-title">@ViewBag.Title</h2>
        <p>
            @Html.ActionLink("Create New Location", "Create")
        </p>
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.StoreNumber)
                    </th>
                    <th>
                        Location Manager
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.State)
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.StoreNumber)
                    </th>
                    <th>
                        Location Manager
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.State)
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StoreNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserDetail.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.LocationId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.LocationId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.LocationId })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</section>