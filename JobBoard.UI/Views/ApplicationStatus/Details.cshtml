        <h2 class="medium-title">@ViewBag.Title</h2>
        <div class="card table-card">
            <div class="card-body">
                <div>

                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.StatusName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.StatusName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.StatusDescription)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.StatusDescription)
                        </dd>

                    </dl>
                </div>
                <p>

                    @Html.ActionLink("Edit", "Edit", new { id = Model.ApplicationStatusId }, new { @class = "btn btn-common" })
