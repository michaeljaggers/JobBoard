@model IEnumerable<JobBoard.DATA.ApplicationStatus>

@{
    ViewBag.Title = "Manage Application Statuses";
}

<section class="manage section">
    <div class="container">
        <h2 class="medium-title">@ViewBag.Title</h2>
        <p>
            @Html.ActionLink("Create New Application Status", "Create", null, new { @class = "btn btn-common" })
        </p>
        <div class="card table-card">
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.StatusName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StatusDescription)
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.StatusName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StatusDescription)
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StatusName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StatusDescription)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ApplicationStatusId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ApplicationStatusId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ApplicationStatusId })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>