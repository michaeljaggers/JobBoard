@model JobBoard.UI.Models.IndexViewModel
@{
    ViewBag.Title = "Manage Your Account";
}

<!-- Page Header Start -->
<div class="page-header" style="background: url(../../Content/img/banner1.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-wrapper">
                    <h2 class="product-title">My Account</h2>
                    <ol class="breadcrumb">
                        <li><a href=@Url.Action("Index", "Home")><i class="ti-home"></i> Home</a></li>
                        <li class="current">My Account</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page Header End -->

<section class="manage section">
    <div class="container">
        <h2 class="medium-title">@ViewBag.Title</h2>
        <p class="text-success">@ViewBag.StatusMessage</p>
        <div class="row">
            <div class="col-md-8">
                <p>
                    @(Model.HasPassword ? Html.ActionLink("Change your password", "ChangePassword", null, new { @class = "btn btn-common" })
                                        : Html.ActionLink("Pick a password", "SetPassword", null, new { @class = "btn btn-common" }))
                </p>
            </div>
        </div>
    </div>
</section>
