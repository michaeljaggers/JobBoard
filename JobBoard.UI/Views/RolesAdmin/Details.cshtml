@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Role Details";
}

<section class="manage section">
    <div class="container">
        <h2 class="medium-title">@ViewBag.Title</h2>
        <div class="card table-card">
            <div class="card-body">
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            Role
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                    </dl>
                </div>
                <h4>Users in this role</h4>
                @if (ViewBag.UserCount == 0)
                {
                    <hr />
                    <p>No users found in this role.</p>
                }

                <table class="table">

                    @foreach (var item in ViewBag.Users)
                    {
                        <tr>
                            <td>
                                @item.UserName
                            </td>
                        </tr>
                    }
                </table>
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-common" })
                </p>
            </div>
        </div>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-info" })
    </div>
</section>

